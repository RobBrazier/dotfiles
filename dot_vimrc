syntax on

set nocompatible

filetype on
filetype plugin on
filetype plugin indent on

set tabstop=2 shiftwidth=2 expandtab
set ignorecase
set smartcase
set number
set incsearch
set hlsearch
set linebreak
set autoindent
set smartindent
set showtabline=1

set wildmode=longest,list
set wildmenu

set showcmd
set autowrite
set hidden  
set mouse=a
set history=1000
set scrolloff=5
set ruler
set backspace=indent,eol,start
set shortmess=atI
set autochdir
set viminfo='20,<50,s10,h,%
let mapleader = ","
